{
  "name": "query-input",
  "version": "0.0.0",
  "scripts": {
    "start": "webpack-dev-server --entry=./src/index.ts --output=./dist/main.js --mode=development --host=0.0.0.0 --devtool=eval-source-map --module-bind='ts=ts-loader' --resolve-extensions='.js,.ts'",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "lint": "eslint src/**/*.ts"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "quotes": [
        "error",
        "single"
      ],
      "object-curly-spacing": [
        "error",
        "never"
      ]
    }
  },
  "jest": {
    "transform": {
      ".*\\.ts$": "ts-jest"
    }
  },
  "devDependencies": {
    "@types/jasmine": "3.5.0",
    "@types/node": "12.12.22",
    "@typescript-eslint/parser": "2.13.0",
    "css-loader": "3.4.0",
    "eslint": "6.8.0",
    "jest": "24.9.0",
    "jest-cli": "24.9.0",
    "style-loader": "1.1.1",
    "ts-jest": "24.2.0",
    "ts-loader": "6.2.1",
    "typescript": "3.7.4",
    "webpack": "4.41.4",
    "webpack-cli": "3.3.10",
    "webpack-dev-server": "3.10.1"
  }
}
