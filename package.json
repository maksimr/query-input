{
  "name": "query-input",
  "version": "0.0.0",
  "scripts": {
    "start": "webpack-dev-server --entry=./src/index.js --output=./dist/main.js --mode=development --host=0.0.0.0 --devtool=eval-source-map",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:type": "tsc",
    "lint": "eslint lib/**/*.js"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "env": {
      "browser": true,
      "node": true
    },
    "globals": {
      "WeakMap": true,
      "describe": true,
      "it": true,
      "beforeEach": true,
      "spyOn": true,
      "expect": true
    },
    "rules": {
      "semi": "error",
      "no-undef": "error",
      "no-unused-vars": "error",
      "valid-jsdoc": [
        "error",
        {
          "requireReturn": false,
          "requireParamDescription": false,
          "requireReturnDescription": false
        }
      ]
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime"
    ]
  },
  "devDependencies": {
    "@types/jest": "25.2.1",
    "css-loader": "3.4.2",
    "eslint": "6.8.0",
    "@babel/core": "7.9.0",
    "@babel/plugin-transform-runtime": "7.9.0",
    "@babel/preset-env": "7.9.5",
    "jest": "25.4.0",
    "jest-cli": "25.4.0",
    "style-loader": "1.1.3",
    "typescript": "3.8.3",
    "webpack": "4.41.5",
    "webpack-cli": "3.3.10",
    "webpack-dev-server": "3.10.3"
  }
}
