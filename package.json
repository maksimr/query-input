{
  "name": "query-input",
  "version": "0.0.0",
  "scripts": {
    "start": "webpack-dev-server --entry=./src/index.ts --output=./dist/main.js --mode=development --host=0.0.0.0 --devtool=eval-source-map --module-bind='ts=ts-loader' --resolve-extensions='.js,.ts'",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "lint": "eslint src/**/*.ts"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "quotes": [
        "error",
        "single"
      ],
      "object-curly-spacing": [
        "error",
        "never"
      ]
    }
  },
  "jest": {
    "transform": {
      ".*\\.ts$": "ts-jest"
    }
  },
  "devDependencies": {
    "@types/jasmine": "3.4.6",
    "@types/node": "12.12.8",
    "@typescript-eslint/parser": "2.7.0",
    "css-loader": "2.1.1",
    "eslint": "6.6.0",
    "jest": "24.9.0",
    "jest-cli": "24.9.0",
    "style-loader": "0.23.1",
    "ts-jest": "24.1.0",
    "ts-loader": "6.2.1",
    "typescript": "3.7.2",
    "webpack": "4.30.0",
    "webpack-cli": "3.2.3",
    "webpack-dev-server": "3.1.14"
  }
}
